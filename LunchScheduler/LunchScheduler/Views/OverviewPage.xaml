                                                      Stretch="Uniform"
                                                      Fill="{ThemeResource CalendarViewSelectedBorderBrush}"
                                                      Width="40"
                                                      Height="40"
                                                      Margin="0,0,0,0" />

                                                <Ellipse Width="50"
                                                         Height="50"
                                                         Margin="10"
                                                         Visibility="{Binding ThumbnailUri, Converter={StaticResource NullToVisibilityConverter}}">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding ThumbnailUri}" />
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                            </Grid>

                                            <TextBlock Text="{Binding FullName}"
                                                       Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                                                       TextWrapping="Wrap"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,0,0,10" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                            <GridView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <Setter Property="HorizontalAlignment"
                                            Value="Stretch" />
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch" />
                                </Style>
                            </GridView.ItemContainerStyle>
                        </GridView>
                    </Grid>
                </DataTemplate>
            </controls:MasterDetailsView.DetailsTemplate>
            <controls:MasterDetailsView.NoSelectionContentTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <SymbolIcon RenderTransformOrigin=".5,.5"
                                    Symbol="CalendarDay">
                            <SymbolIcon.RenderTransform>
                                <CompositeTransform ScaleX="2"
                                                    ScaleY="2" />
                            </SymbolIcon.RenderTransform>
                        </SymbolIcon>
                        <TextBlock Margin="0,12"
                                   FontSize="24"
                                   Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </controls:MasterDetailsView.NoSelectionContentTemplate>
        </controls:MasterDetailsView>
        
        <CommandBar Grid.Row="1"
                    Grid.ColumnSpan="2">
            <AppBarButton Icon="Add"
                          Click="{x:Bind ViewModel.AddAppointmentAppBarButton_OnClick}" />
        </CommandBar>

        <Grid x:Name="AddLunchOverlay"
              Visibility="{Binding AddAppointmentOverlayVisibility}"
              Background="#DDFFFFFF"
              Grid.RowSpan="2">
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  BorderBrush="Black"
                  BorderThickness="2"
                  Padding="10"
                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Create a lunch appointment"
                               Margin="0,10,0,5"
                               Foreground="{ThemeResource ApplicationForegroundThemeBrush}" />
                    <TextBox x:Name="TitleTextBox"
                             Text="{Binding LunchToAdd.Title, Mode=TwoWay}"
                             PlaceholderText="enter title for appointment"
                             Margin="0,10,0,10" />

                    <TextBlock Text="Restaurant Details"
                               Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                               Margin="0,10,0,5" />

                    <TextBox Text="{Binding LunchToAdd.Location.Name, Mode=TwoWay}"
                             PlaceholderText="name"
                             Margin="0,0,0,10" />
                    <TextBox Text="{Binding LunchToAdd.Location.Address, Mode=TwoWay}"
                             AcceptsReturn="True"
                             PlaceholderText="address"
                             Margin="0,0,0,10" />
                    <TextBox Text="{Binding LunchToAdd.Location.PhoneNumber, Mode=TwoWay}"
                             PlaceholderText="phone"
                             Margin="0,0,0,10" />

                    <DatePicker x:Name="LunchDatePicker"
                                Header="Select Date"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"
                                DateChanged="{x:Bind ViewModel.LunchToAdd_OnDateChanged}" />
                    <TimePicker x:Name="LunchTimePicker"
                                Header="Select Time"
                                Margin="0,0,0,10"
                                TimeChanged="{x:Bind ViewModel.LunchToAdd_OnTimeChanged}"
                                HorizontalAlignment="Stretch" />

                    <Button x:Name="AddLunchGuestButton"
                            Content="Add Lunch Guest"
                            Margin="0,10,0,0"
                            Click="{x:Bind ViewModel.AddLunchGuestButton_OnClick}" />

                    <ListView ItemsSource="{Binding LunchToAdd.Guests}"
                              SelectionMode="None"
                              Height="150"
                              ScrollViewer.VerticalScrollMode="Disabled"
                              ScrollViewer.HorizontalScrollMode="Enabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Background="{ThemeResource AppBarBackgroundThemeBrush}">

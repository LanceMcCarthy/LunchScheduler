<Page
    x:Class="LunchScheduler.Views.OldOverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LunchScheduler.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:LunchScheduler.ViewModels"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewModels:OverviewViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MaxWidth="200"
                              Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GridView x:Name="UpcomingLunchesGridView"
                  ItemsSource="{Binding LunchAppointments}"
                  ItemTemplate="{StaticResource LunchAppointmentDataTemplate}"
                  SelectionMode="Extended"
                  Header="Scheduled Lunches"
                  Grid.Row="0"
                  Grid.Column="0">
            <GridView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding}"
                                   Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   HorizontalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </GridView.HeaderTemplate>
        </GridView>

        <ListView x:Name="RecentGuestsListView"
                  ItemsSource="{Binding CurrentLunchGuests}"
                  ItemTemplate="{StaticResource LunchGuestPhotoTemplate}"
                  SelectionChanged="{x:Bind ViewModel.RecentGuestsListView_OnSelectionChanged}"
                  SelectionMode="Extended"
                  Header="Recent Guests"
                  Grid.Column="1"
                  Margin="10,0,10,0"
                  Grid.Row="0"
                  Grid.RowSpan="2">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding}"
                                   Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   HorizontalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalAlignment"
                            Value="Stretch" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <CommandBar x:Name="RootCommandBar"
                    Grid.Row="2"
                    Grid.ColumnSpan="2">
            <AppBarButton x:Name="AddAppointmentAppBarButton"
                          Icon="Add"
                          Click="{x:Bind ViewModel.AddAppointmentAppBarButton_OnClick}" />
        </CommandBar>

        <Grid x:Name="AddLunchOverlay"
              Visibility="{Binding AddAppointmentOverlayVisibility}"
              Background="#DDFFFFFF"
              Grid.ColumnSpan="2"
              Grid.RowSpan="3">
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  BorderBrush="Black"
                  BorderThickness="2"
                  Padding="10"
                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Create a lunch appointment"
                               Margin="0,10,0,5"
                               Foreground="{ThemeResource ApplicationForegroundThemeBrush}" />
                    <TextBox x:Name="TitleTextBox"
                             Text="{Binding LunchToAdd.Title, Mode=TwoWay}"
                             PlaceholderText="enter title for appointment"
                             Margin="0,10,0,10" />

                    <TextBlock Text="Restaurant Details"
                               Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                               Margin="0,10,0,5" />

                    <TextBox Text="{Binding LunchToAdd.Location.Name, Mode=TwoWay}"
                             PlaceholderText="name"
                             Margin="0,0,0,10" />
                    <TextBox Text="{Binding LunchToAdd.Location.Address, Mode=TwoWay}"
                             AcceptsReturn="True"
                             PlaceholderText="address"
                             Margin="0,0,0,10" />
                    <TextBox Text="{Binding LunchToAdd.Location.PhoneNumber, Mode=TwoWay}"
                             PlaceholderText="phone"
                             Margin="0,0,0,10" />

                    <DatePicker x:Name="LunchDatePicker"
                                Header="Select Date"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"
                                DateChanged="{x:Bind ViewModel.LunchToAdd_OnDateChanged}" />
                    <TimePicker x:Name="LunchTimePicker"
                                Header="Select Time"
                                Margin="0,0,0,10"
                                TimeChanged="{x:Bind ViewModel.LunchToAdd_OnTimeChanged}"
                                HorizontalAlignment="Stretch" />

                    <Button x:Name="AddLunchGuestButton"
                            Content="Add Lunch Guest"
                            Margin="0,10,0,0"
                            Click="{x:Bind ViewModel.AddLunchGuestButton_OnClick}" />

                    <ListView ItemsSource="{Binding LunchToAdd.Guests}"
                              SelectionMode="None"
                              Height="150"
                              ScrollViewer.VerticalScrollMode="Disabled"
                              ScrollViewer.HorizontalScrollMode="Enabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

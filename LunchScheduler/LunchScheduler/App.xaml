        <DataTemplate x:Key="GuestPhoneNumberTemplate">
            <StackPanel Background="{ThemeResource AppBarBackgroundThemeBrush}"
                        Padding="10"
                        Margin="10">
                <TextBlock Text="{Binding Description}" FontWeight="SemiBold" />
                <TextBlock Text="{Binding Number}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="GuestEmailTemplate">
            <StackPanel Background="{ThemeResource AppBarBackgroundThemeBrush}" 
                        Padding="10"
                        Margin="10">
                <TextBlock Text="{Binding Description}" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Address}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="LunchAppointmentDataTemplate">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Text="{Binding LunchTime, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:g}'}"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Text="{Binding Location.Name}"
                               Margin="0,10,0,0" />
                    <TextBlock Text="{Binding Location.Address}" />
                    <TextBlock Text="{Binding Location.PhoneNumber}" />
                </StackPanel>
                <GridView ItemsSource="{Binding Guests}"
                          SelectionMode="None"
                          Grid.Row="1"
                          Header="Guests"
                          ItemTemplate="{StaticResource LunchGuestPhotoTemplate}">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="HorizontalAlignment"
                                    Value="Stretch" />
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                        </Style>
                    </GridView.ItemContainerStyle>
                </GridView>
            </Grid>
        </DataTemplate>

        <Style x:Key="GridViewItemStyle" TargetType="GridViewItem">
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
        </Style>

        <Style x:Key="WideListViewItemStyle"
               TargetType="ListViewItem">
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
        </Style>

        
    </common:BootStrapper.Resources>

</common:BootStrapper>
